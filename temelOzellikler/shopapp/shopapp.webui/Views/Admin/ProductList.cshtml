@model ProductListViewModel




<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Admin Products</h1>
        <hr>
        
            <a href="/admin/products/create" class="btn btn-primary btn-sm">Add Products</a>
        
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Image</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Anasayfa</td>
                    <td>OnaylÄ±</td>
                    <td></td>

                </tr>
            </thead>
            <tbody>

                @if(Model.products.Count > 0){


                    @foreach (var item in Model.products)
                    {
                        <tr>
                            <td>@item.ProductId </td>
                            <td><img src="~/img/@item.ImageUrl" width="80"></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                @if(item.IsHome){
                                    <i class="fas fa-check-circle"></i>
                                }else{
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                @if(item.IsApproved){
                                    <i class="fas fa-check-circle"></i>
                                }else{
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@item.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>
                              
                                <form action="/admin/deleteproduct" method="POST" style="display: inline">
                                    <input type="hidden" name="productId" value="@item.ProductId">
                                    <button class="btn btn-danger btn-sm mr-2" type="submit">Delete</button>

                                </form>  
                            
                            </td>
                        </tr>
                    }
                }else{
                    <div class="alert alert-warning">No Products</div>
                }




            </tbody>
        </table>
    </div>
</div>