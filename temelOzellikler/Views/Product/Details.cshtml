@model Product
@section Categories{
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="~/img/@Model.ImageUrl" height="250" style="width: 300px !important;" class="card-img">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>
</div>

