@model UserViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">

    <div class="col-sm-3">

        <img src="@Model.Picture" style="width: 100%;height: 100%;">

    </div>
    <div class="col-sm-9">

        <table class="table table-bordered table-striped">

            <tr>
                <th>Kullanıcı Ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon No</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>City</th>
                <td>
                    
                    @if(string.IsNullOrEmpty(@Model.City)){

                        <span> belirtilmemiş</span>

                    }else{

                        @Model.City

                    }

                </td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>

                    @if(Model.BirthDay != null){
                    
                        @Model.BirthDay?.ToShortDateString()
                    
                    }else{

                        <span> belirtilmemiş</span>

                    }

                </td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>

        </table>

    </div>

</div>